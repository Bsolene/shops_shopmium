<% @shops.each do |shop| %>
  <div class="product">
  <div class='product-body'>
    <h3><%= shop.name %></h3>
    <p><%= shop.city %></p>
  </div>
  <ul class="list-inline product-controls hidden-sm hidden-xs">
    <li><%= link_to shop_path(shop) do %>
      <i class="fa fa-eye"></i>
    <% end %></li>
    <li><%= link_to edit_shop_path(shop) do %>
      <i class="fa fa-pencil"></i>
    <% end %></li>
    <li><%= link_to shop_path(shop), method: :delete do %><i class="fa fa-trash-o"></i>
    <% end %></li>
  </ul>
</div>
<% end %>
