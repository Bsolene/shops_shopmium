<%= simple_form_for(@shop) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :chain %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :zip %>
      <%= f.input :phone %>
      <%= f.input :country_code, as: :string %>
    </div>

    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
